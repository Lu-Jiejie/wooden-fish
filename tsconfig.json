{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext"],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src", "src/**/*.d.ts", "src/**/*.vue", "*.d.ts"]
}
